@model MVCProject1.Models.MissionModel
@{
    ViewBag.Title = "Mission";
}
@*breadcrumb to go back easily. basic bootstrap*@
<div>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index">Home</a></li>
        <li><a href="~/Missions">Missions</a></li>
        <li class="active">@Model.missionName</li>
    </ol>
</div>

@*takes the Model data that made a match and inputs the data so page is dynamic*@
<div class="text-center">
    <h2>@Model.missionName FAQs</h2>
</div>

<div class="row">
    <div class="col-sm-4 thumbnail">
        @*presents basic mission data as acodrion view on the side*@
        <h2>Mission Info</h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">President Name</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Model.missionPresidentName
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Mission Address</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        <p>@Model.missionAddress</p>
                        <p>@Model.missionCity, @Model.missionState @Model.missionZip</p>
                        <p>@Model.missionCountry</p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Mission Language</a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">
                        <p>@Model.missionLanguage</p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">Mission Climate</a>
                    </h4>
                </div>
                <div id="collapse4" class="panel-collapse collapse">
                    <div class="panel-body">
                        <p>@Model.missionClimate</p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse5">Dominate Religion</a>
                    </h4>
                </div>
                <div id="collapse5" class="panel-collapse collapse">
                    <div class="panel-body">
                        <p>@Model.missionDomReligion</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 thumbnail">
        <div class="thumbnail">
            <img class="img-circle" src="@Model.missionPresidentPicLink" alt="Alternate Text" />
        </div>
        <h3 class="text-center">@Model.missionPresidentName</h3>
    </div>
    <div class="col-sm-4 thumbnail">
        <img class="img-thumbnail" src="@Model.missionFlagLink" alt="Alternate Text" />
        <h3>@Model.missionName's Flag</h3>
    </div>
</div>

@Html.Partial("_FAQPartial")